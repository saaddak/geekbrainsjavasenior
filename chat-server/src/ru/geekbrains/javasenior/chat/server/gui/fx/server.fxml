<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="ru.geekbrains.javasenior.chat.server.gui.fx.Controller"
          alignment="center">
    <Button fx:id="btnStart" text="Старт" onAction="#start"
            GridPane.columnIndex="0" GridPane.hgrow="ALWAYS" maxWidth="Infinity"/>
    <Button fx:id="btnStop" text="Стоп" onAction="#stop"
            GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" maxWidth="Infinity"/>
    <Button fx:id="btnDrop" text="Сбросить всех" onAction="#drop"
            GridPane.columnIndex="2" GridPane.hgrow="ALWAYS" maxWidth="Infinity"/>
    <TextArea fx:id="taLog" GridPane.rowIndex="1"
              GridPane.columnSpan="3" GridPane.vgrow="ALWAYS"/>

</GridPane>
